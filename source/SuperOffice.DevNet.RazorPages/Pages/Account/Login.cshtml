@page
@model SuperOffice.DevNet.Asp.Net.RazorPages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FormInput.Email"></label>
                    <input asp-for="FormInput.Email" class="form-control" />
                    <span asp-validation-for="FormInput.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormInput.Password"></label>
                    <input asp-for="FormInput.Password" class="form-control" />
                    <span asp-validation-for="FormInput.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @await Html.PartialAsync("./_ExternalLoginPartial", Model.ExternalLogins)
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}