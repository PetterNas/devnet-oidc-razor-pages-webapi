@page
@model SuperOffice.DevNet.Asp.Net.RazorPages.IndexModel

@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>List of companies</h1>

<p>
    <a class="btn btn-superoffice btn-lg" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactList[0].Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>

            <td>

                <a asp-page="./Edit" asp-route-id="@item.ContactId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ContactId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ContactId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
