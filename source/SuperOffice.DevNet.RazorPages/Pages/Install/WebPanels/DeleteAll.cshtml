@page
@model SuperOffice.DevNet.Asp.Net.RazorPages.Pages.Install.WebPanels.DeleteAllModel
@{
    ViewData["Title"] = "DeleteAll";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete All My App Web Panels</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WebPanelList[0].Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WebPanelList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-superoffice btn-lg">Delete all app web panels</button> |
    <div>
        <p>&nbsp;</p>
        <a asp-page="./Index">Back to List</a>
    </div>
</form>
