@page
@model SuperOffice.DevNet.Asp.Net.RazorPages.Pages.Install.Webhooks.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-6">
        <p>
            <a class="btn btn-superoffice" asp-page="Create">Create New</a>
        </p>
    </div>
    <div class="col-md-6">
        <p>
            <a class="btn btn-superoffice" asp-page="DeleteAll">Delete All My Webhooks</a>
        </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WebhookList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebhookList[0].TargetUrl)
            </th>
            <th>Can only manage own webhooks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WebhookList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetUrl)
                </td>

                <td>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@item.WebhookId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.WebhookId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.WebhookId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


