@using SuperOffice.DevNet.Asp.Net.RazorPages.Models
@model List<ListItemModel>

<section>
    <h4>User groups allowed to see this panel:</h4>
    <hr />
    @{
        if (Model.Count() == 0)
        {
            <div>
                <p>
                    UserGroups and Headings is not configured.
                </p>
            </div>
        }
        else
        {
            <div class="form-group">
                <ul class="list-group">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item">
                            <input type="checkbox" asp-for="@Model[i].Selected" />
                            <label asp-for="@Model[i].Selected">@Model[i].Name</label>
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input type="hidden" asp-for="@Model[i].Name" />
                        </li>
                    }
                </ul>
            </div>
        }
    }
</section>
